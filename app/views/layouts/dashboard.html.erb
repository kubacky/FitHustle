<!DOCTYPE html>
<html>
<head>
  <title>FitHustle</title>
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body class="bg-gray-100">
<!-- navbar -->
<div class="md:fixed md:w-full md:top-0 md:z-20 flex flex-row flex-wrap items-center bg-white p-6 border-b border-gray-300">
  <%= link_to "Sign Out", destroy_user_session_path, method: :delete %>
</div>
<!-- /navbar -->

<!-- wrapper -->
<div class="h-screen flex flex-row flex-wrap">

  <!-- sidebar -->
  <div class="relative flex flex-col flex-wrap bg-white border-r border-gray-300 p-6 flex-none w-64 md:h-screen md:shadow-xl animated faster">


    <!-- sidebar content -->
    <div class="flex flex-col">

      <p class="uppercase md:mt-10 text-xs text-indigo-700 mb-4 tracking-wider">Section 1</p>

      <a href="#" class="mb-3 capitalize font-medium text-sm">
        Workouts
      </a>
      <a href="#" class="mb-3 capitalize font-medium text-sm">
        Diet
      </a>

      <p class="uppercase text-xs text-indigo-700 mb-4 mt-4 tracking-wider">Section 2</p>
      <a href="#" class="mb-3 font-medium text-sm">
        Your account
      </a>
    </div>
    <!-- end sidebar content -->

  </div>
  <!-- /sidbar -->

  <!-- content -->
  <div class="bg-gray-100 flex-1 p-6 md:mt-16">
    <%= yield %>
  </div>
  <!-- /content -->

</div>
<!-- /wrapper -->

</body>
</html>
