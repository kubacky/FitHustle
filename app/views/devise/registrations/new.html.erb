<div class="flex h-screen bg-gradient-to-r from-indigo-500 to-yellow-600">
  <div class="w-full max-w-lg m-auto bg-white rounded p-5 opacity-90">
    <header class="pl-5 pr-5">
      <%= image_tag "fithustle.png", class: "mx-auto w-52" %>
    </header>
    <h1 class="text-lg font-bold mb-5 mt-5">Join us!</h1>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, class: "mt-0 block w-full px-0.5 border border-gray-300 focus:ring-0 focus:border-black" %>
      </div>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="flex space-x-5">
        <div class="field flex-1">
          <%= f.label :name %>
          <%= f.text_field :name, class: "mt-0 block w-full px-0.5 border border-gray-300 focus:ring-0 focus:border-black" %>
        </div>

        <div class="field flex-1">
          <%= f.label :surname %>
          <%= f.text_field :surname, class: "mt-0 block w-full px-0.5 border border-gray-300 focus:ring-0 focus:border-black" %>
        </div>
      </div>

      <div class="flex space-x-5">
        <div class="field flex-1">
          <%= f.label :password %>
          <%= f.password_field :password, class: "mt-0 block w-full px-0.5 border border-gray-300 focus:ring-0 focus:border-black" %>
        </div>

        <div class="field flex-1">
          <%= f.label :password_confirmation %>
          <%= f.password_field :password_confirmation, class: "mt-0 block w-full px-0.5 border border-gray-300 focus:ring-0 focus:border-black" %>
        </div>
      </div>
      <span class="text-gray-700">I am</span>
      <div class="field">
        <label class="inline-flex items-center mr-5">
          <%= f.radio_button :role, 'trainee', :checked => true %>
          <span class="ml-2">Trainee</span>
        </label>
        <label class="inline-flex items-center">
          <%= f.radio_button :role, 'trainer' %>
          <span class="ml-2">Trainer</span>
        </label>
      </div>
      <div class="actions mb-0 mt-5">
        <%= f.submit "Create an account", class: "bg-indigo-700 py-2 px-4 text-white font-bold mr-2 rounded" %>
        <%= render "devise/shared/links" %>
      </div>
    <% end %>
  </div>
</div>