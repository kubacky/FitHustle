<div class="bg-white w-2/3 border border-gray-200 mt-6 rounded">
  <div class="p-8 border-b border-gray-200">
    <h1 class="text-xl text-gray-800 font-bold">Edit <%= resource_name.to_s.humanize %></h1>
  </div>

  <!-- body -->
  <div class="grid grid-cols-2 gap-6 lg:grid-cols-1">

    <div class="p-8">

      <%= render "devise/shared/error_messages", resource: resource %>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.label :email %>
          <%= f.email_field :email, autofocus: true, class: "mt-0 block w-full px-0.5 border border-gray-300 focus:ring-0 focus:border-black" %>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>

        <div class="flex space-x-5">
          <div class="field flex-1">
            <%= f.label :name %>
            <%= f.text_field :name, class: "mt-0 block w-full px-0.5 border border-gray-300 focus:ring-0 focus:border-black" %>
          </div>

          <div class="field flex-1">
            <%= f.label :surname %>
            <%= f.text_field :surname, class: "mt-0 block w-full px-0.5 border border-gray-300 focus:ring-0 focus:border-black" %>
          </div>
        </div>

        <div class="flex space-x-5">
          <div class="field flex-1">
            <label>New password</label>
            <%= f.password_field :password, class: "mt-0 block w-full px-0.5 border border-gray-300 focus:ring-0 focus:border-black" %>
          </div>

          <div class="field flex-1">
            <label>Current password</label>
            <%= f.password_field :current_confirmation, class: "mt-0 block w-full px-0.5 border border-gray-300 focus:ring-0 focus:border-black" %>
          </div>
        </div>

        <%= render @user.role, f: f if @user.role == 'trainee' || @user.role == 'trainer' %>

        <div class="actions">
          <%= f.submit "Update", class: "bg-indigo-700 py-2 px-4 text-white font-bold mr-2 rounded" %>
        </div>

      <% end %>

      <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "bg-yellow-400 py-2 px-4 text-gray-900 mr-2 rounded" %>

    </div>
  </div>
  <!-- end body -->

</div>
